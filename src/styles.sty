% Seitenränder
\RequirePackage[a4paper, top{3.3 cm} bottom{2.5 cm} left{2.5 cm} right{2.5 cm}]{geometry}
#% Schriftart
\RequirePackage{fontspec}
\setmainfont{Arial}

% Inhaltsverzeichnis
\RequirePackage{tocloft}
\renewcommand{\cftsecleader}{\cftdotfill{\cftdotsep}} % for sections
\renewcommand*\contentsname{Inhaltsverzeichnis}

% Kopf und Fußleiste
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\renewcommand{\sectionmark}[1]{ \markright{#1} }
\fancyhf{}
\fancyhf[HL]{\textit{ \nouppercase{\rightmark}} }   % Kopfleiste mit section name
\fancyhf[FR]{\thepage}  % Fußleiste mit Seitenzahl
